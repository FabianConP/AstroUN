<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.unas.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
    The following two permissions are not required to use
    Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyA8oRmG1-upL_XZnySiDwVoJ3rMtagvxK0" />

        <activity
            android:name="com.unas.app.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.unas.app.universeActivity"
            android:label="@string/title_activity_universe"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.unas.app.infoActivity"
            android:label="@string/title_activity_info"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.unas.app.GoogleMapsActivity"
            android:label="@string/title_activity_google_maps"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.unas.app.DetailActivity"
            android:label="@string/title_activity_detail"
            android:screenOrientation="landscape" />
        <activity
            android:name="com.unas.app.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="landscape"></activity>
    </application>

</manifest>
